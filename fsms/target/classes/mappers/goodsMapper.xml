<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="goodsMapper">
		
	<select id="selectListGoods" parameterType="GoodsDto" resultType="GoodsDto">
		SELECT
				*
		FROM
				GOODS
		<where>
			<if test='!goodsCategory.equals("all")'>
				GOODS_CATEGORY = #{goodsCategory}
			</if>
			<if test='goodsCategory.equals("all")'>
				GOODS_CATEGORY IN ('beef' , 'lamb' , 'pork' , 'chicken' , 'duckMeat');
			</if>
		</where>				
	</select>
	
	
	<select id="selectGetOneGoods" parameterType="int" resultType="GoodsDto">
		SELECT
				*
		FROM
				GOODS
		WHERE
				GOODS_CD = #{goodsCd}
	</select>
	
	<select id="selectGetGoodsCnt" resultType="int" parameterType="int">
		SELECT 
				COUNT(*) 
		FROM 
				GOODS
	</select>
	
	<select id="selectGetByPrice" resultType="GoodsDto">
		SELECT
				*
		FROM
				GOODS
		ORDER BY
				PRICE DESC
	</select>
	
	
</mapper>